@model IEnumerable<UserStore.Models.CartViewModel>
@{
    ViewBag.Title = "AllOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="mainCart">
    <table class="table cartTable ">


        <tbody>
        @foreach (var prod in @Model)
        {
            <tr id=@prod.Id.ToString()>
                <td><img class="img-responsive" src=@Url.Content(@prod.Product.Absolutepath)></td>
                <td>@prod.Product.Name</td>
                <td><input type="number" class="cartNumber" max="10" min="1" value=@prod.Quantity></td>
                <td class="priceTd">@prod.Price</td>
                <td>@Ajax.ActionLink("Удалить с корзины", "Remove", new {ide = @prod.Id.ToString(), Controller = "Cart"}, new AjaxOptions {UpdateTargetId = @prod.Id.ToString()}, new {@class = "btn btn-info"})</td>

            </tr>
        }





        </tbody>
    </table>
    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <strong class="strongCart">Итого: </strong> <span id="totalPrice"></span>

        </div>

    </div>
    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <button class="btn btn-info" type="button" data-toggle="modal" data-target="#gridSystemModal">Оформить заказ</button>

        </div>

    </div>
</main>
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<div id="gridSystemModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridModalLabel">Оформление заказа</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid bd-example-row">
                    @using(Html.BeginForm("MakeOrder","Order"))
                    {
                         <div class="row">
                        <div class="col-md-4 col-md-offset-4">Введите свое имя: <input name="Name" type="text"> </div>
                        
                        </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">Введите номер телефона: <input name="PhoneNumber" type="text"></div>
                        
                    </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-4">Время получения заказа :</div>
                        </div>
                        <div class="row">
                          
                            <div class="col-md-2 col-md-offset-4">C 
                                <select name="from">
                                    <option selected="selected">10</option>
                                    <option>11</option>
                                    <option>12</option>
                                    <option>13</option>
                                    <option>14</option>
                                    <option>15</option>
                                    <option>16</option>
                                    <option>17</option>
                                    <option>18</option>
                                    <option>19</option>
                                    <option>20</option>
                                    <option>21</option>
                                    <option>22</option>
                                    <option>23</option>
                                </select>
                            </div>
                           
                            <div class="col-md-2">До 
                                <select name="to">
                                    <option>10</option>
                                    <option>11</option>
                                    <option>12</option>
                                    <option>13</option>
                                    <option>14</option>
                                    <option>15</option>
                                    <option>16</option>
                                    <option>17</option>
                                    <option>18</option>
                                    <option>19</option>
                                    <option>20</option>
                                    <option>21</option>
                                    <option>22</option>
                                    <option>23</option>
                                </select>
                            </div>

                        </div>
                    
                        <div class="row">
                            <div class="col-md-3 col-md-offset-4">
                                Улица: <input name="Street" type="text">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <span>Номер дома<input name="NumberOfHome" type="number"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <span>Корпус<input id="Housing" name="Housing" type="text" value=""></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <span>Подъезд:</span> <input name="Access" type="text">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <span class="text">Квартира</span> <input name="numberOfFlat" type="number" value="">
                            </div>
                        </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить заказ</button>
                        <button type="submit" class="btn btn-primary">Подтвердить заказ</button>
                    </div>
                    }
            </div>


                </div>
            </div>
           
        </div>
   
</div>




@section Footer {

