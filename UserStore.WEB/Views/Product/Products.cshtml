

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="mainProduct">
    <table class="table productTable">
        <tbody>
        @foreach (var prod in @Model)
        {
            <tr id=@prod.Id.ToString()>
                <td><img class=" img-responsive" src=@Url.Content(@prod.Absolutepath)></td>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
                <td>@Html.ActionLink("Редактировать", "Edit", new { Controller = "Product", ide = @prod.Id.ToString() }, new { @class = "btn btn-info" })</td>
                <td>@Ajax.ActionLink("Удалить", "Remove", new { ide = @prod.Id.ToString(), Controller = "Product" }, new AjaxOptions { UpdateTargetId = @prod.Id.ToString() }, new { @class = "btn btn-info" })</td>
            </tr>
        }
          
        </tbody>
    </table>

</main>
@Scripts.Render("~/scripts/jquery-1.7.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
@section Footer {

}










